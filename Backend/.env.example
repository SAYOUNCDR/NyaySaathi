
# NyaySaathi backend example environment file
# Copy this file to `.env` and fill in real secrets before running the app.
# IMPORTANT: Never commit your real API keys or secrets to source control.

# LLM provider selection - one of: openai | google
LLM_PROVIDER=
# Example model ids (provider-specific). For OpenAI use a model id like `gpt-4o-mini`.
LLM_MODEL=

# OpenAI API key (leave blank if you will use Google)
OPENAI_API_KEY=

# Google API key for Gemini (leave blank if you will use OpenAI)
GOOGLE_API_KEY=

# API & CORS
API_PREFIX=/api
# JSON list of allowed origins used by FastAPI CORS middleware
CORS_ORIGINS=["http://localhost:5173"]

# Stores
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379/0

# Auth (development defaults). Change in production.
JWT_SECRET=change-me-dev-secret
JWT_EXPIRE_MINUTES=120
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

